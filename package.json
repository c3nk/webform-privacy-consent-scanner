{
  "name": "form-scanner",
  "version": "1.1.0",
  "description": "Scan a list of URLs and detect embedded forms (Google, HubSpot, Microsoft) with CMP detection (static HTML or optional dynamic rendering).",
  "type": "module",
  "bin": {
    "form-scan": "scanner.mjs"
  },
  "scripts": {
    "scan": "node scanner.mjs --input urls.txt --out results.csv",
    "scan:dynamic": "node scanner.mjs --input urls.txt --out results.csv --dynamic --wait 6000",
    "scan:cmp": "node scanner.mjs --input urls.txt --out results.csv --cmp",
    "scan:full": "node scanner.mjs --input urls.txt --out results.csv --dynamic --wait 6000 --cmp",
    "filter": "node filter.mjs --input results.json --attr is_google_form --value true",
    "prepare": "node -e \"console.log('Ready')\""
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "p-limit": "^6.1.0"
  },
  "devDependencies": {
    "playwright": "^1.47.0",
    "eslint": "^9.11.0",
    "eslint-plugin-import": "^2.29.1"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT"
}